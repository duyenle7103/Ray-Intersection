<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the sphere!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextR"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="25dp"
        android:hint="R"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextXSph"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:hint="X"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextR" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextYSph"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:hint="Y"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextXSph"
        app:layout_constraintTop_toBottomOf="@+id/editTextR" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextZSph"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:hint="Z"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextYSph"
        app:layout_constraintTop_toBottomOf="@+id/editTextR" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextRayX0"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="25dp"
        android:hint="X0"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextY0"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:hint="Y0"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextRayX0"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextZ0"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:hint="Z0"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextY0"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextYd"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:hint="YD"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextXd"
        app:layout_constraintTop_toBottomOf="@+id/editTextY0" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextXd"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:hint="XD"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRayX0" />

    <Button
        android:id="@+id/buttonSphDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="40dp"
        android:text="Draw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextYd" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="30dp"
        android:text="Enter the ray!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextYSph" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextZd"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:hint="ZD"
        android:inputType="numberDecimal|numberSigned"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editTextYd"
        app:layout_constraintTop_toBottomOf="@+id/editTextZ0" />

</androidx.constraintlayout.widget.ConstraintLayout>